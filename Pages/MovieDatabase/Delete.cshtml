@page
@model RazorPagesMovie.Pages.Movies2.DeleteModel

@{
    ViewData["Title"] = "Delete Movie";
}

<h3>Are you sure you want to delete <b>@Html.DisplayFor(model => model.Movie2.Title)</b> from the database?</h3>
<div>
    <img src="@Html.DisplayFor(model => model.Movie2.Poster)">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie2.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie2.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie2.Rated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie2.Rated)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Movie2.imdbID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
